@model IEnumerable<TravelExpertsGui.Models.Package>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center m-5">Our Packages</h1>

<div class="row justify-content-center">
@foreach (var item in Model){
    
        <div class="card  col-md-4 m-md-5 shadow" @*style="width: 18rem;"*@>
            <h5 class="card-title my-2">@Html.DisplayFor(modelItem => item.PkgName)</h5>
            @if (item.PackageId == 1)
            {
                <img class="card-img-top" src="~/images/carribean-newyear.jpg" alt="...">
            }
            @if (item.PackageId == 2)
            {
                <img class="card-img-top" src="~/images/polynesian-paradise.jpg" alt="...">
            }
            @if (item.PackageId == 3)
            {
                <img class="card-img-top" src="~/images/asian-expedition.jpg" alt="...">
            }
            @if (item.PackageId == 4)
            {
                <img class="card-img-top" src="~/images/european.jpg" alt="...">
            }
            
            <div class="card-body ">
                
                <h5 class="card-text">@Html.DisplayNameFor(modelItem => item.PkgStartDate)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.PkgStartDate)</p>
                <h5 class="card-text">@Html.DisplayNameFor(modelItem =>  item.PkgEndDate)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem =>  item.PkgEndDate)</p>
                <h5 class="card-text">@Html.DisplayNameFor(modelItem =>  item.PkgDesc)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem =>  item.PkgDesc)</p>
                <h5 class="card-text">@Html.DisplayNameFor(modelItem =>  item.PkgBasePrice)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem =>  item.PkgBasePrice)</p>
                
            </div>
            <p>
                    <a class="btn btn-outline-primary d-block" asp-area="" asp-controller="Packages" asp-action="BookPackage">Book A Package</a>
                </p>
        </div>  
}
</div>